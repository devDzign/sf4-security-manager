{% extends 'base.html.twig' %}

{% block title %}Furniture{% endblock %}

{% block body %}
    <h1>Furniture</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ article.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ article.title }}</td>
        </tr>
        <tr>
            <th>Descrption</th>
            <td>{{ article.content }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>
                {% if article.imageName %}
                    <img src="{{ vich_uploader_asset(article, 'imageFile') | imagine_filter('squared_thumbnail_medium') }}" class="img-fluid">
                {% else %}
                    <img src="{{ asset('build/img/empty.jpg') | imagine_filter('squared_thumbnail_medium') }}">

                {% endif %}
            </td>
        </tr>

        </tbody>
    </table>

    <div class="row">
        <div class="col-2">
            <a href="{{ path('article_index') }}" class="btn btn-info"> <i class="fa fa-arrow-left"></i> back to list</a>
        </div>
        <div class="col-2">
            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-success"><i class="fa fa-edit"></i> edit</a>
        </div>
        {#        <div class="col-2">#}
        {#            {{ include('furniture/_delete_form.html.twig') }}#}
        {#        </div>#}
    </div>





{% endblock %}
